import sys

def build(bld):
  obj = bld.create_obj('cc', 'plugin')
  obj.includes = '../../include'
  obj.target = 'xmms_equalizer'
  obj.source = ["eq.c", "iir.c", "iir_cfs.c", "iir_fpu.c"]
  obj.uselib = 'glib-2.0'

def configure(conf):
  if sys.platform == 'darwin':
    conf.check_message_custom('pls plugin', '', 'currently broken, disabled')
  else:
	conf.env['XMMS_PLUGINS_ENABLED'].append('equalizer')
