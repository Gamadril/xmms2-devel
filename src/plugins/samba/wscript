def build(bld):
  obj = bld.create_obj('cc', 'shlib')
  obj.target = 'xmms_smb'
  obj.includes = '../../include'
  obj.source = 'samba.c'
  obj.uselib = 'samba glib-2.0'

def configure(conf):
  conf.check_tool('checks')
  if (conf.check_header2('libsmbclient.h', mandatory=0) and
      conf.check_library2('smbclient', mandatory=0, uselib='samba')):
    conf.env['XMMS_PLUGINS_ENABLED'].append('samba')
