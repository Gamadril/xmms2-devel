def build(bld):
  obj = bld.create_obj('cc', 'plugin')
  obj.target = 'xmms_musepack'
  obj.includes = '../../include'
  obj.source = ['musepack.c', 'ape.c']
  obj.uselib = 'musepack glib-2.0'

def configure(conf):
  conf.check_tool('checks')
  if conf.check_library2('mpcdec', uselib='musepack', mandatory=0):
    conf.env['XMMS_PLUGINS_ENABLED'].append('musepack')
