def build(bld):
  obj = bld.create_obj('cc', 'shlib')
  obj.target = 'xmms_musepack'
  obj.includes = '../../include'
  obj.source = ['musepack.c', 'ape.c']
  obj.uselib = 'musepack glib-2.0'

def configure(conf):
  conf.check_tool('checks')
  if (conf.check_pkg('glib-2.0', vnum='2.6.0', destvar='glib-2.0') and
      conf.check_library2('mpcdec', uselib='musepack', mandatory=0)):
    conf.env['XMMS_PLUGINS_ENABLED'].append('musepack')
