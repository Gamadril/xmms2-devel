def build(bld):
  obj = bld.create_obj('cc', 'shlib')
  obj.target = 'modplug'
  obj.sources = 'modplug.c'
  obj.uselib = 'modplug'

def configure(conf):
  if (conf.check_pkg('modplug', destvar='modplug') or
      conf.check_pkg('libmodplug', destvar='modplug')):
    conf.env['XMMS_PLUGINS_ENABLED'].append('modplug')
