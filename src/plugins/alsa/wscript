import os
def build(bld):
    obj = bld.create_obj('cc', 'plugin')
    obj.target = 'xmms_alsa'
    obj.includes = '../../include'
    obj.source = 'alsa.c'
    obj.uselib = 'alsa glib-2.0'

def configure(conf):
    if conf.check_pkg('alsa', destvar='alsa'):
        conf.env['XMMS_PLUGINS_ENABLED'].append('alsa')
