# Plugin never tested! FEEDBACK PLEASE
from xmmsenv.plugin import plugin

def plugin_configure(conf):
  conf.check_header('AudioUnit/AudioUnit.h', define="HAVE_COREAUDIO")
  if conf.env['HAVE_COREAUDIO']:
    conf.env['LINKFLAGS_coreaudio'] = ['-framework CoreAudio',
                                       '-framework AudioUnit']
  return conf.env['HAVE_COREAUDIO']

configure, build = plugin('coreaudio', configure=plugin_configure,
                          needs_lib=True)
