from xmmsenv.plugin import plugin

def plugin_configure(conf):
  return (conf.check_pkg('vorbisfile', destvar='vorbisfile') and
          conf.check_pkg('vorbis', destvar='vorbis') and
          conf.check_pkg('ogg', destvar='ogg'))

configure, build = plugin('vorbis', needs_lib=True,
                          extra_libs=['vorbisfile', 'ogg'])
