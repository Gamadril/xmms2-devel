target="xmmsclient"
source=["ipc.c", 
	"ipc_glib.c", 
	"medialib.c", 
	"other.c", 
	"playback.c", 
	"playlist.c", 
	"result.c", 
	"xhash.c", 
	"xlist.c", 
	"xmmsclient.c"]

def config(env):
	env["SHLIBSUFFIX"] += ".0"
	env["SHLINKFLAGS"] += " -Wl,-soname," + env.libname(target)
	env["LIBS"].append("xmmsipc")
	env.Prepend(LIBPATH="src/lib/xmmsipc")
	return True
