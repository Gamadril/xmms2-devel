def build(bld):
  lib = bld.create_obj('cpp', 'shlib')
  lib.target = 'xmmsclient++-glib'
  lib.source = 'xmmsclient++-glib.cpp'
  lib.uselib = 'glib-2.0'
  lib.uselib_local = 'xmmsclient-glib'
  lib.includes = '../../../include ../../../includepriv'

def configure(conf):
  conf.env['XMMS_PKGCONF_FILES'].append(('xmms2-client-cpp-glib', '-lxmmsclient-glib -lxmmsclient++-glib'))
  return True

def set_options(env):
  pass
