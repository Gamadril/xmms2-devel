#target="libxmmsclient++"
target="xmmsclient++"
systemlibrary=True

source=["xmmsclient.cpp"]

def config(env):
	env.Append(LIBS=["xmmsclient"])
	env.Append(CPPPATH=["#src/includepriv"])
	env.Append(CPPPATH=["#src/include/xmmsclient"])
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient")
	env.pkgconfig("sigc++-2.0")
