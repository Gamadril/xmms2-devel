target="xmms2"
source=["xmms2_client.c", "cli_mlib.c"]
supported_platforms = ['darwin','freebsd','linux','netbsd','openbsd']

def config(env):
	env["LIBS"].append("xmmsclient")
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient")
	env["LIBS"].append("xmmsclient-glib")
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient-glib")
	env.pkgconfig("glib-2.0")
	return True
