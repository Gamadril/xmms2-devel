#cli client

Import('base_env')

xmms2_sources = Split ("xmms2_client.c")

env = base_env.Copy(CPPPATH = ['../lib/xmmsclient','../..'],
	LIBPATH = ["../lib/xmmsclient/"],
	LIBS = ["xmmsclient"])

env.AddFlagsFromGroup("glib")

env.Program(target = "xmms2" , source = xmms2_sources )

env.Install("/usr/local/bin", "xmms2")
