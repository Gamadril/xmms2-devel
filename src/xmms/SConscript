Import('base_env')


xmms2d_sources = Split ("config.c plugin.c object.c ringbuf.c "+
			"transport.c decoder.c output.c playlist.c magic.c "+
			"core.c plsplugins.c dbus.c unixsignal.c "+
			"log.c util.c visualisation.c main.c mediainfo.c effect.c "+
			"playlist_entry.c")

xmms2_test_s = Split ("config.c testcnf.c util.c object.c");

env = base_env.Copy()

env.AddFlagsFromGroup("glib")
env.AddFlagsFromGroup("dbusglib")
env.AddFlagsFromGroup("xml2")

#env.Program(target = "xmms2d" , source = xmms2d_sources )
#env.Install("/usr/local/bin","xmms2d")

env.XmmsConfig("xmms2.conf")

env.XmmsProgram("xmms2d", xmms2d_sources)
